# Relayer Configuration
RELAYER_HOST=0.0.0.0
RELAYER_PORT=8080
# SECURITY WARNING: Never commit your private key to version control!
# Generate a secure private key using: openssl rand -hex 32
# For production, use a hardware wallet or HSM
RELAYER_PRIVATE_KEY=<REPLACE_WITH_ACTUAL_KEY>
RELAYER_MIN_BALANCE_CRITICAL=500000000000000000

# Database
# SECURITY WARNING: POSTGRES_PASSWORD is required for deployment - do not use empty or default passwords
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<generate-secure-password>
POSTGRES_DB=zkp_airdrop
# SECURITY WARNING: DATABASE_URL is required for deployment
DATABASE_URL=postgresql://postgres:<your_password>@localhost:5432/zkp_airdrop

# Redis
# SECURITY WARNING: REDIS_URL is required for deployment
# SECURITY WARNING: REDIS_PASSWORD must be set in production
REDIS_PASSWORD=<generate-secure-password>
REDIS_URL=redis://:<your_redis_password>@localhost:6379

# Network Configuration
NETWORK=optimism
# SECURITY WARNING: RPC_URL is required for deployment
RPC_URL=<your-rpc-endpoint>
CHAIN_ID=10
AIRDROP_CONTRACT_ADDRESS=0x...
TOKEN_CONTRACT_ADDRESS=0x...
RELAYER_REGISTRY_CONTRACT_ADDRESS=0x...

# Merkle Tree
MERKLE_TREE_ROOT=0x...
MERKLE_TREE_SOURCE=/path/to/tree.bin
MERKLE_TREE_CACHE_PATH=/data/merkle_tree.bin

# Rate Limiting
CLAIMS_PER_MINUTE=10
REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_SECONDS=120

# CLI Configuration
RELAYER_URL=http://localhost:8080
